[Unit]
Description=Genie server for Scotbudg
After=network.target remote-fs.target nss-lookup.target

[Service]
# Type=forking
User=graham_s
# note this now includes GINI_ENV=prod to use production environment
EnvironmentFile=/etc/systemd/user/gks_environment
# The PID file is optional, but recommended in the manpage
# "so that systemd can identify the main process of the daemon"
PIDFile=/run/conjoint.pid
WorkingDirectory=/home/graham_s/julia/vw/STB2/Conjoint
ExecStart=/home/graham_s/julia/vw/STB2/Conjoint/bin/server
ExecStop=/bin/kill -WINCH ${MAINPID}
KillSignal=SIGKILL
PrivateTmp=true
TimeoutStartSec=360
[Install]
WantedBy=multi-user.target
